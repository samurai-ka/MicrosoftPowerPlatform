{
  "properties": {
    "connectionParameters": {
      "mastodonServer": {
        "type": "string",
        "uiDefinition": {
          "constraints": {
            "required": "true"
          },
          "displayName": "Hostname",
          "description": "Specify hostname of your Mastodon server",
          "tooltip": "Provide your Mastodon instance hostname"
        }
      },
      "token": {
        "type": "oauthSetting",
        "oAuthSettings": {
          "clientId": "<Enter your client ID>",
          "identityProvider": "oauth2",
          "scopes": [
            "read","write","follow"
          ],
          "redirectMode": "Global",
          "redirectUrl": "https://global.consent.azure-apim.net/redirect",
          "properties": {
            "IsFirstParty": "False"
          },
          "customParameters": {
            "authorizationUrl": {
              "value": "https://<mastodon.example>/oauth/authorize"
            },
            "tokenUrl": {
              "value": "https://<mastodon.example>/oauth/token"
            },
            "refreshUrl": {
              "value": "https://<mastodon.example>/oauth/token"
            }
          }
        }
      }
    },
    "iconBrandColor": "#2791da",
    "policyTemplateInstances": [
      {
        "templateId": "dynamichosturl",
        "title": "Set Mastodon service host URL",
        "parameters": {
          "x-ms-apimTemplateParameter.urlTemplate": "https://@connectionParameters('mastodonServer')"
        }
      }
    ]
  }
}